<Page x:Class="Магазин.Magas.Vid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Магазин.Magas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Vid">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления: поиск и кнопки -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" 
                     Width="200" 
                     Margin="0,0,10,0"/>

            <Button Content="Найти"
                    Click="SortByName_Click"
                    Margin="0,0,10,0"/>

            <Button Content="В корзину"
                    Click="ToCart_Click"
                    Background="#FF4CAF50"
                    Foreground="White"/>
        </StackPanel>

        <!-- Список товаров -->
        <ListView x:Name="ProductsListView"
                  Grid.Row="1"
                  ItemsSource="{Binding ProductsView}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <!-- Шаблон элемента списка -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#FFBDBDBD"
                            BorderThickness="1"
                            Margin="5"
                            Padding="10"
                            CornerRadius="5">
                        <Grid Width="250">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- CheckBox для выбора товара -->
                            <CheckBox Grid.Column="0"
                                      IsChecked="{Binding IsSelected}"
                                      VerticalAlignment="Top"
                                      Margin="0,5,10,0"/>

                            <!-- Контент товара -->
                            <StackPanel Grid.Column="1">
                                <!-- Изображение -->
                                <Image Source="{Binding Foto}"
                                       Height="150"
                                       Stretch="UniformToFill"
                                       Margin="0,0,0,5"/>

                                <!-- Название -->
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap"/>

                                <!-- Цена -->
                                <TextBlock Text="{Binding Price, StringFormat='Цена: {0} руб.'}"
                                           Foreground="#FF2196F3"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

            <!-- Расположение элементов в несколько столбцов -->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
</Page>
