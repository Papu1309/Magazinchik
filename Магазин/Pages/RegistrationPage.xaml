<Page x:Class="Магазин.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Магазин.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RegistrationPage" Background="Chocolate" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Регистрация"
        FontSize="40"
        VerticalAlignment="Center"
        Grid.Row="1"
        Grid.Column="2"
        Grid.ColumnSpan="2"
        TextAlignment="Center"
        Foreground="Purple"
        FontWeight="Bold" 
        Margin="10"
        />
        <TextBlock Text="Логин"
 FontSize="17"
 Grid.Column="2"
 Grid.Row="2"       
 Grid.ColumnSpan="2"
 TextAlignment="Center"
 HorizontalAlignment="Center"
 VerticalAlignment="Top"
        FontStyle="Italic" 
         />
        <TextBox x:Name="txbLogin"
      FontSize="22"
      Grid.Column="2 "
      Grid.Row="2"       
      Grid.ColumnSpan="2"
      Height="40"
      VerticalAlignment="Center"
      Padding="5"
       />
        <TextBlock Text="Пароль"
     FontSize="17"
     Grid.Column="2"
     Grid.Row="3"       
     Grid.ColumnSpan="2"
     TextAlignment="Center"
     HorizontalAlignment="Center"
     VerticalAlignment="Top"
     FontStyle="Italic" />
        <TextBox x:Name="txbPassword"
      FontSize="22"
      Grid.Column="2"
      Grid.Row="3"       
      Grid.ColumnSpan="2"
      Height="40"
      VerticalAlignment="Center"
      Padding="5"
      />
        <Button x:Name="btnVxod" Grid.Column="2"
     Grid.Row="4"       
     Grid.ColumnSpan="2"
     FontSize="22"
     Height="50" Content="Зарегистрироваться"
     FontFamily="Calibri"
     Background="Brown" Click="btnRegOchova_Click"/>
    </Grid>
</Page>
